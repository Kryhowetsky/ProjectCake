@model List<OrderCakeViewModel>




<div class="panel panel-primary center-block">
    <div class="panel-heading panel-head"><h3 class="text-center">This is order list</h3></div>
    <div class="panel-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Comment</th>
                    <th>Prepared date</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderCake in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="status" id="status" /></td>
                        <td>@orderCake.Name</td>
                        <td>@orderCake.Surname</td>
                        <td>@orderCake.Phone</td>
                        <td>@orderCake.Email</td>
                        <td>@orderCake.Comment</td>
                        <td>@orderCake.PreparedOrderDate</td>
                        <td>@orderCake.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{

    <script>
        $('tr').click(function (e) {

            if ($('input', this).is(':checked')) {
                $(this).css('background-color', 'lightgreen');
            } else {
                $(this).css('background-color', 'white');
            }

        });

    </script>

}
